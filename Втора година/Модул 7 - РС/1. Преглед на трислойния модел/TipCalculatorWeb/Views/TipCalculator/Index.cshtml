@model Tip;

<form asp-controller="TipCalculator" asp-action="CalculateTip">
    <div class="form-group">
        <label>Bill amount</label>
        <input type="number" class="form-control" placeholder="Enter bill amount" name="amount">
    </div>
    <div class="form-group">
        <label>Tip percent</label>
        <input type="number" class="form-control" placeholder="Enter tip percent" name="percent">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<br/>

@if (Model != null)
{
    <h1>Tip: @Model.CalculateTip().ToString("C")</h1>
    <h1>Total: @Model.CalculateTotal().ToString("C")</h1>
}